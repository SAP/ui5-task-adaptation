{
    "name": "@ui5/task-adaptation",
    "version": "1.0.5",
    "description": "Custom task for ui5-builder which allows building UI5 Flexibility Adaptation Projects for SAP BTP, Cloud Foundry environment",
    "main": "index.js",
    "scripts": {
        "test": "npm run build && npm run coverage",
        "dev": "mocha --no-timeouts -r ts-node/register 'test/**/*.spec.ts'",
        "coverage": "nyc node_modules/.bin/mocha -r ts-node/register 'test/**/*.spec.ts'",
        "coverage-verbose": "nyc --reporter=html --reporter=text node_modules/.bin/mocha -r ts-node/register 'test/**/*.spec.ts'",
        "preversion": "npm test",
        "version": "git-chglog --next-tag v$npm_package_version -o CHANGELOG.md && git add CHANGELOG.md",
        "postversion": "git push --follow-tags",
        "release-note": "git-chglog -c .chglog/release-config.yml v$npm_package_version",
        "build": "rollup -c rollup.config.js && tsc -p ."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/ui5-task-adaptation.git"
    },
    "keywords": [
        "adaptation",
        "ui5",
        "builder",
        "tools",
        "business",
        "application",
        "studio"
    ],
    "author": "SAP SE",
    "license": "Apache-2.0",
    "dependencies": {
        "@buxlabs/amd-to-es6": "^0.16.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@sap/cf-tools": "^1.1.0",
        "@ui5/cli": "^2.10.2",
        "@ui5/fs": "^2.0.6",
        "@ui5/logger": "^2.0.1",
        "@ui5/project": "^2.3.1",
        "adm-zip": "^0.5.5",
        "amdextract": "^3.0.0",
        "builtin-modules": "^3.2.0",
        "crc": "^3.8.0",
        "js-yaml": "^4.0.0",
        "node-fetch": "^2.6.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.44.0",
        "temp-dir": "^2.0.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/adm-zip": "^0.4.34",
        "@types/chai": "^4.2.16",
        "@types/mocha": "^8.2.2",
        "@types/node-fetch": "^2.5.9",
        "@types/request": "^2.48.5",
        "@types/rimraf": "^3.0.0",
        "@types/sinon": "^9.0.11",
        "chai": "^4.3.4",
        "mocha": "^8.3.2",
        "mock-require": "^3.0.3",
        "nyc": "^15.1.0",
        "sinon": "^10.0.0",
        "source-map-support": "^0.5.19",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    },
    "nyc": {
        "reporter": [
            "lcov",
            "text",
            "text-summary"
        ],
        "exclude": [
            ".eslintrc.js",
            "docs/**",
            "jsdocs/**",
            "coverage/**",
            "test/**",
            "lib/processors/jsdoc/lib/**",
            "dist/**",
            "rollup.config.js",
            "rollup/**",
            "src/model/types.ts",
            "src/util/requestUtil.ts"
        ],
        "check-coverage": true,
        "statements": 85,
        "branches": 70,
        "functions": 90,
        "lines": 85,
        "watermarks": {
            "statements": [
                70,
                90
            ],
            "branches": [
                70,
                90
            ],
            "functions": [
                70,
                90
            ],
            "lines": [
                70,
                90
            ]
        },
        "cache": true,
        "all": true
    }
}
